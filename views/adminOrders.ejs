<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Orders - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e8f5e9 100%);
        }
        .navbar {
            background-color: #668760 !important;
        }
        .order-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(102, 187, 106, 0.15);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        .order-header {
            background: linear-gradient(135deg, #667db6 0%, #0082c8 100%);
            color: white;
            padding: 1.5rem;
        }
        .order-body {
            padding: 1.5rem;
        }
        .order-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            border-bottom: 1px solid #e8f5e9;
        }
        .order-item:last-child {
            border-bottom: none;
        }
        .order-item img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 1rem;
        }
        .btn-primary {
            background-color: #66bb6a;
            border-color: #66bb6a;
        }
        .btn-primary:hover {
            background-color: #5a9d4d;
            border-color: #5a9d4d;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-store me-2"></i>
                Cold Container - Admin
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/inventory">
                            <i class="fas fa-boxes me-1"></i> Inventory
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/feedbacks">
                            <i class="fas fa-comment-dots me-1"></i> Feedback
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/orders">
                            <i class="fas fa-receipt me-1"></i> Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">
                            <i class="fas fa-sign-out-alt me-1"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- All Orders Content -->
    <div class="container my-5">
        <h2 class="mb-4">
            <i class="fas fa-receipt me-2"></i>
            All Orders
        </h2>

        <% if (orders && orders.length > 0) { %>
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Total Orders: <strong><%= orders.length %></strong>
            </div>
            <% if (typeof totalRevenue !== 'undefined') { %>
                <div class="alert alert-success">
                    <i class="fas fa-dollar-sign me-2"></i>
                    Total Revenue: <strong>$<%= (Number(totalRevenue) || 0).toFixed(2) %></strong>
                </div>
            <% } %>

            <% orders.forEach(order => { %>
                <div class="order-card">
                    <div class="order-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">Order #<%= order.orderId %></h5>
                                <small>
                                    Customer: <strong>
                                        <%= order.customerName ? order.customerName : (order.username || order.customerEmail || 'Guest') %>
                                    </strong>
                                    <% if (order.customerEmail) { %>
                                        &nbsp;(<%= order.customerEmail %>)
                                    <% } %>
                                    &nbsp;|&nbsp; <%= new Date(order.orderDate).toLocaleString() %>
                                </small>
                            </div>
                            <div class="text-end">
                                <h4 class="mb-0">$<%= (Number(order.totalAmount) || 0).toFixed(2) %></h4>
                                <small><%= order.paymentMethod %></small>
                            </div>
                        </div>
                    </div>
                    <div class="order-body">
                        <% if (order.items && order.items.length > 0) { %>
                            <% order.items.forEach(item => { %>
                                <div class="order-item">
                                    <img src="/images/<%= item.image %>" alt="<%= item.productName %>">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1"><%= item.productName %></h6>
                                        <small class="text-muted">Quantity: <%= item.quantity %> Ã— $<%= (Number(item.price) || 0).toFixed(2) %></small>
                                    </div>
                                    <div class="text-end">
                                        <strong>$<%= ((Number(item.price) || 0) * (Number(item.quantity) || 0)).toFixed(2) %></strong>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p class="text-muted">No items in this order.</p>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No orders yet</h4>
                <p class="text-muted">Orders will appear here once customers make purchases.</p>
            </div>
        <% } %>

        <div class="mt-4">
            <a href="/inventory" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>Back to Inventory
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
