<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History - Cold Container</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Pacifico&display=swap');
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e8f5e9 100%);
        }
        .navbar-brand {
            font-family: 'Pacifico', cursive;
            font-size: 1.8rem !important;
        }
        .navbar {
            background-color: #668760 !important;
        }
        .order-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(102, 187, 106, 0.15);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        .order-header {
            background: linear-gradient(135deg, #76a279 0%, #66bb6a 100%);
            color: white;
            padding: 1.5rem;
        }
        .order-body {
            padding: 1.5rem;
        }
        .order-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            border-bottom: 1px solid #e8f5e9;
        }
        .order-item:last-child {
            border-bottom: none;
        }
        .order-item img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 1rem;
        }
        .btn-back {
            background-color: #66bb6a;
            border-color: #66bb6a;
            color: white;
        }
        .btn-back:hover {
            background-color: #5a9d4d;
            border-color: #5a9d4d;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-store me-2"></i>
                Cold Container
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">
                            <i class="fas fa-shopping-cart me-1"></i> Cart
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Order History Content -->
    <div class="container my-5">
        <h2 class="mb-2">
            <i class="fas fa-history me-2"></i>
            Order History
        </h2>
        <% if (!user) { %>
            <form class="row g-2 mb-4" method="get" action="/order-history">
                <div class="col-auto">
                    <input type="email" name="email" class="form-control" placeholder="Enter your email to find orders" required>
                </div>
                <div class="col-auto">
                    <button class="btn btn-back" type="submit"><i class="fas fa-search me-2"></i>Find Orders</button>
                </div>
            </form>
        <% } %>

        <% if (orders && orders.length > 0) { %>
            <% orders.forEach(order => { %>
                <div class="order-card">
                    <div class="order-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">Order #<%= order.orderId %></h5>
                                <small><%= new Date(order.orderDate).toLocaleString() %></small>
                            </div>
                            <div class="text-end">
                                <h4 class="mb-0">$<%= (Number(order.totalAmount) || 0).toFixed(2) %></h4>
                                <small><%= order.paymentMethod %></small>
                            </div>
                        </div>
                    </div>
                    <div class="order-body">
                        <% if (order.items && order.items.length > 0) { %>
                            <% order.items.forEach(item => { %>
                                <div class="order-item">
                                    <img src="/images/<%= item.image %>" alt="<%= item.productName %>">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1"><%= item.productName %></h6>
                                        <small class="text-muted">Quantity: <%= item.quantity %> Ã— $<%= (Number(item.price) || 0).toFixed(2) %></small>
                                    </div>
                                    <div class="text-end">
                                        <strong>$<%= ((Number(item.price) || 0) * (Number(item.quantity) || 0)).toFixed(2) %></strong>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p class="text-muted">No items in this order.</p>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No orders yet</h4>
                <p class="text-muted">Start shopping to create your first order!</p>
                <a href="/" class="btn btn-back mt-3">
                    <i class="fas fa-shopping-cart me-2"></i>Start Shopping
                </a>
            </div>
        <% } %>

        <div class="mt-4">
            <a href="/" class="btn btn-back">
                <i class="fas fa-arrow-left me-2"></i>Continue Shopping
            </a>
        </div>
    </div>

    <%- include('partials/cartButton') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
