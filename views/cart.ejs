<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart - Cold Container</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Pacifico&display=swap');
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f5f5;
        }
        .navbar-brand {
            font-family: 'Pacifico', cursive;
            font-size: 1.8rem !important;
            font-weight: 400;
        }
        .navbar {
            background-color: #668760 !important;
        }
        .cart-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(102, 187, 106, 0.15);
            padding: 2rem;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }
        .cart-table img {
            max-width: 60px;
            border-radius: 5px;
        }
        .cart-table td {
            vertical-align: middle;
        }
        .btn-remove {
            background-color: #f44336;
            color: white;
            border: none;
        }
        .btn-remove:hover {
            background-color: #d32f2f;
        }
        .cart-empty {
            text-align: center;
            padding: 3rem 0;
        }
        .cart-empty i {
            font-size: 4rem;
            color: #ccc;
            margin-bottom: 1rem;
        }
        .cart-summary {
            background-color: #f8f9fa;
            padding: 2rem;
            border-radius: 10px;
            margin-top: 2rem;
        }
        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
        }
        .summary-row.total {
            font-weight: 700;
            font-size: 1.4rem;
            color: #66bb6a;
            border-top: 2px solid #66bb6a;
            padding-top: 1rem;
            margin-top: 1rem;
        }
        .btn-primary {
            background-color: #66bb6a;
            border-color: #66bb6a;
        }
        .btn-primary:hover {
            background-color: #5a9d4d;
            border-color: #5a9d4d;
        }
        .btn-back {
            background-color: #668760;
            border-color: #668760;
            color: white;
        }
        .btn-back:hover {
            background-color: #566844;
            border-color: #566844;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-store me-2"></i>
                Cold Container
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home me-1"></i> Home
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Cart Content -->
    <div class="container">
        <div class="cart-container">
            <h2 class="mb-4">
                <i class="fas fa-shopping-cart me-2"></i>
                Shopping Cart
            </h2>

            <div id="cartContent"></div>
        </div>
    </div>

    <script>
        // Load cart from localStorage
        function loadCart() {
            const cart = JSON.parse(localStorage.getItem('cart')) || [];
            const cartContent = document.getElementById('cartContent');
            
            if (cart.length === 0) {
                cartContent.innerHTML = `
                    <div class="cart-empty">
                        <i class="fas fa-shopping-bag"></i>
                        <h3 class="text-muted">Your cart is empty</h3>
                        <p class="text-muted">Start shopping to add items to your cart</p>
                        <a href="/" class="btn btn-back mt-3">
                            <i class="fas fa-arrow-left me-2"></i> Continue Shopping
                        </a>
                    </div>
                `;
                return;
            }

            // Build table
            let tableHTML = `
                <table class="table table-hover cart-table">
                    <thead>
                        <tr style="background-color: #f0f0f0;">
                            <th>Product</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            let grandTotal = 0;
            cart.forEach((item, index) => {
                const itemTotal = (item.price * item.quantity).toFixed(2);
                grandTotal += parseFloat(itemTotal);
                tableHTML += `
                    <tr>
                        <td><strong>${item.productName}</strong></td>
                        <td><img src="/images/${item.image}" alt="${item.productName}"></td>
                        <td>$${(item.price).toFixed(2)}</td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <button class="btn btn-sm btn-outline-secondary" onclick="updateQuantity(${index}, -1)">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <span style="min-width: 30px; text-align: center;">${item.quantity}</span>
                                <button class="btn btn-sm btn-outline-secondary" onclick="updateQuantity(${index}, 1)">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </td>
                        <td><strong>$${itemTotal}</strong></td>
                        <td>
                            <button class="btn btn-sm btn-remove" onclick="removeFromCart(${index})">
                                <i class="fas fa-trash me-1"></i> Remove
                            </button>
                        </td>
                    </tr>
                `;
            });

            tableHTML += `
                    </tbody>
                </table>
            `;

            // Add summary
            tableHTML += `
                <div class="cart-summary">
                    <div class="summary-row">
                        <span>Subtotal:</span>
                        <span>$${grandTotal.toFixed(2)}</span>
                    </div>
                    <div class="summary-row">
                        <span>Tax (estimated):</span>
                        <span>$${(grandTotal * 0.07).toFixed(2)}</span>
                    </div>
                    <div class="summary-row total">
                        <span>Total:</span>
                        <span>$${(grandTotal * 1.07).toFixed(2)}</span>
                    </div>
                </div>
            `;

            // Add buttons
            tableHTML += `
                <div class="mt-4 d-flex gap-2">
                    <a href="/" class="btn btn-back">
                        <i class="fas fa-arrow-left me-2"></i> Continue Shopping
                    </a>
                    <button class="btn btn-danger" onclick="clearCart()">
                        <i class="fas fa-trash me-2"></i> Clear Cart
                    </button>
                    <button class="btn btn-primary" onclick="checkout()">
                        <i class="fas fa-credit-card me-2"></i> Proceed to Checkout
                    </button>
                </div>
            `;

            cartContent.innerHTML = tableHTML;
        }

        // Update quantity
        function updateQuantity(index, change) {
            const cart = JSON.parse(localStorage.getItem('cart')) || [];
            const item = cart[index];
            if (!item) return;

            const maxQ = Number(item.maxQuantity || Infinity);
            const newQty = Number(item.quantity || 0) + change;

            // If increasing, ensure we don't exceed stock
            if (change > 0 && newQty > maxQ) {
                alert(`Cannot increase quantity. Only ${maxQ} in stock.`);
                return;
            }

            item.quantity = newQty;
            if (item.quantity <= 0) {
                cart.splice(index, 1);
            }

            localStorage.setItem('cart', JSON.stringify(cart));
            loadCart();
        }

        // Remove from cart
        function removeFromCart(index) {
            if (confirm('Remove this item from your cart?')) {
                const cart = JSON.parse(localStorage.getItem('cart')) || [];
                cart.splice(index, 1);
                localStorage.setItem('cart', JSON.stringify(cart));
                loadCart();
            }
        }

        // Clear cart
        function clearCart() {
            if (confirm('Are you sure you want to clear your cart?')) {
                localStorage.removeItem('cart');
                loadCart();
            }
        }

        // Checkout
        function checkout() {
            const cart = JSON.parse(localStorage.getItem('cart')) || [];
            if (!cart || cart.length === 0) {
                alert('Your cart is empty.');
                return;
            }
            // Redirect to checkout page
            window.location.href = '/checkout';
        }

        // Load cart on page load
            loadCart();
        </script>
        <%- include('partials/cartButton') %>
    </body>
    </html>
