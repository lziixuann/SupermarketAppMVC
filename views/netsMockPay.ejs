<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mock NETS Payment</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background: #f5f7fb;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1.5rem;
    }
    .pay-card {
      width: 100%;
      max-width: 680px;
      background: white;
      border-radius: 14px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.08);
      padding: 2rem;
    }
    .order-box {
      background: #f8f9fa;
      border-radius: 10px;
      padding: 1rem 1.25rem;
    }
    .total-row {
      font-size: 1.1rem;
      font-weight: 700;
    }
  </style>
</head>
<body>
  <div class="pay-card">
    <div class="d-flex align-items-center mb-3">
      <i class="fas fa-mobile-alt fa-2x me-2 text-primary"></i>
      <div>
        <h3 class="mb-0">Mock NETS Payment</h3>
        <div class="text-muted">This simulates a NETS QR scan payment.</div>
      </div>
    </div>

    <div class="order-box mb-3">
      <div><strong>Order ID:</strong> <%= order.orderId %></div>
      <div><strong>Status:</strong> <span class="badge text-bg-warning">pending</span></div>
      <% if (txnRetrievalRef) { %>
        <div><strong>Txn Ref:</strong> <%= txnRetrievalRef %></div>
      <% } %>
    </div>

    <h5 class="mb-2">Items</h5>
    <% if (order.items && order.items.length > 0) { %>
      <ul class="list-group mb-3">
        <% order.items.forEach((item) => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <div><strong><%= item.productName || ('Product #' + item.productId) %></strong></div>
              <div class="text-muted small">Qty: <%= item.quantity %></div>
            </div>
            <div>$<%= Number(item.price || 0).toFixed(2) %></div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <div class="alert alert-secondary">No order items found.</div>
    <% } %>

    <div class="d-flex justify-content-between align-items-center mb-4 total-row">
      <span>Total</span>
      <span>$<%= Number(order.totalAmount || 0).toFixed(2) %></span>
    </div>

    <form method="POST" action="/nets/mock-pay" class="d-grid gap-2">
      <input type="hidden" name="orderId" value="<%= order.orderId %>">
      <input type="hidden" name="txnRetrievalRef" value="<%= txnRetrievalRef || '' %>">
      <button type="submit" class="btn btn-success btn-lg">
        <i class="fas fa-check-circle me-1"></i> Pay Successfully
      </button>
      <a href="/checkout" class="btn btn-outline-secondary">Cancel</a>
    </form>
  </div>
</body>
</html>

